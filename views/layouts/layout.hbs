    <script type="text/javascript">
        $(document).ready(function() {

            // Function is called on change of select box of flight type
            // if user selects flight type as 'RETURN' then shows div to add flight return timings
            // if user selects flight type as 'ONE WAY' then hides div to add flight return timings
            $("#flightType").change(function() {
                // Empty fields
                $("#returnDetails input").val("");
                // Checks if flight type is return then it shows div to add return values
                if ($(this).val() == "return")
                    $("#returnDetails").removeClass("d-none");
                else
                    // Hides fields to add return values
                    $("#returnDetails").addClass("d-none");
            });


            // Function to set attribute if clicked element wans return records
            $(".nav.nav-pills a").click(function() {
                if($("#return-val").hasClass("active"))
                    $("#searchReturnDate").removeClass("d-none");
                else
                    $("#searchReturnDate").addClass("d-none");                    
            });

            $(function () {
                $("#addFlight #originDepartureDate").datetimepicker();
                $("#addFlight #destinationArrivalDate").datetimepicker();
                $("#addFlight #destinationDepartureDate").datetimepicker();
                $("#addFlight #originArrivalDate").datetimepicker();
            });


        })
    </script>
